{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": ["node", "express", "vitest/globals"],
        "baseUrl": ".",
            "paths": {
            "@/*": ["src/*"]
            },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "src/types/express.d.ts"],
    "exclude": ["node_modules"]

}
  